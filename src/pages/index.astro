---
import '@fontsource-variable/source-sans-3';
import {App} from '../components/App';

const DESCRIPTION =
	'Software engineer passionate about React, TypeScript, and Rust. Interested in distributed systems and scalable architecture.';

class IntersectionObserver {
	root = null;
	rootMargin = '';
	thresholds = [];

	disconnect() {
		return null;
	}

	observe() {
		return null;
	}

	takeRecords() {
		return [];
	}

	unobserve() {
		return null;
	}
}
globalThis.IntersectionObserver = IntersectionObserver;

class ResizeObserver {
	disconnect() {
		return null;
	}

	observe() {
		return null;
	}

	unobserve() {
		return null;
	}
}
globalThis.ResizeObserver = ResizeObserver;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" class="favicon" href="/favicon.svg" />
    <meta name="description" content={DESCRIPTION} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:description" content={DESCRIPTION} />
    <meta property="og:image:height" content="200" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image" content="https://hampuskraft.com/og-image.png" />
    <meta property="og:title" content="Hampus Kraft" />
    <meta property="og:url" content="https://hampuskraft.com" />
    <title>Hampus Kraft</title>
  </head>
  <body class="min-h-screen bg-black font-sans text-white">
    <App client:load />
  </body>
</html>

<style is:global>
  :root {
    --text-link: #72bbfe;
    --font-primary: 'Source Sans 3 Variable', sans-serif;
  }

  html {
    font-size: calc(16px + 0.5vw);
  }

  @media screen and (min-aspect-ratio: 16/9) and (min-height: 800px) {
    html {
      font-size: calc(16px + 0.3vw);
    }
  }

  @media screen and (min-aspect-ratio: 16/9) and (max-height: 799px) {
    html {
      font-size: calc(16px + 0.25vw);
    }
  }

  @media screen and (max-aspect-ratio: 3/4) {
    html {
      font-size: calc(16px + 0.75vh);
    }
  }
</style>
